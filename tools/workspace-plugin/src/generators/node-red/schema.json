{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "node-red",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "uiBuilder": {
      "description": "Enable the UI Builder",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    }
  },
  "required": ["name"]
}
